{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/ffmpeg",
          "args": [
            "-i",
            {
              "validator": "\\S+"
            },
            "-vf",
            "fps=1/10",
            {
              "validator": "\\S+"
            }
          ],
          "sidecar": true
        }
      ]
    }
  ]
}
